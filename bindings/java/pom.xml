<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.clojars.cartesiantheatrics</groupId>
    <artifactId>manifold3d</artifactId>
    <version>1.0.7</version>
    <packaging>jar</packaging>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <manifold.root.directory>${project.build.directory}/../../..</manifold.root.directory>
        <manifold.build.directory>${manifold.root.directory}/build</manifold.build.directory>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.bytedeco</groupId>
            <artifactId>javacpp</artifactId>
            <version>1.5.9</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <distributionManagement>
        <repository>
            <id>clojars</id>
            <name>Clojars repository</name>
            <url>https://clojars.org/repo</url>
        </repository>
    </distributionManagement>
    
    <build>
        <resources>
            <resource>
                <directory>${manifold.build.directory}/meshIO</directory>
                <includes>
                    <include>libmeshIO.so</include>
                    <include>meshIO.dll</include>
                    <include>meshIO.lib</include>
                    <include>libmeshIO.dylib</include>
                </includes>
            </resource>
            <resource>
                <directory>${manifold.build.directory}/src/manifold</directory>
                <includes>
                    <include>libmanifold.so</include>
                    <include>manifold.dll</include>
                    <include>manifold.lib</include>
                    <include>libmanifold.dylib</include>
                </includes>
            </resource>
            <resource>
                <directory>${manifold.build.directory}/src/third_party/clipper2/CPP</directory>
                <includes>
                    <include>libClipper2.so.1.2.1</include>
                    <include>Clipper2.dll</include>
                    <include>Clipper2.lib</include>
                    <include>libClipper2.dylib.1.2.1</include>
                </includes>
            </resource>
        </resources>
        <plugins>
           <plugin>
                <groupId>org.bytedeco</groupId>
                <artifactId>javacpp</artifactId>
                <version>1.5.9</version>
                <configuration>
                    <classPath>${project.build.outputDirectory}</classPath>
                    <libraryPath>${project.build.directory}/../../../build/src/manifold/</libraryPath>
                    <includePaths>
                        <includePath>${project.build.sourceDirectory}</includePath>
                        <includePath>src/main/cpp/manifold3d/</includePath>
                        <includePath>${manifold.root.directory}/src/cross_section/include/</includePath>
                        <includePath>${manifold.root.directory}/src/third_party/clipper2/CPP/Clipper2Lib/include/</includePath>
                        <includePath>${manifold.root.directory}/src/third_party/glm/</includePath>
                        <includePath>${manifold.root.directory}/src/polygon/include</includePath>
                        <includePath>${manifold.root.directory}/src/manifold/include/</includePath>
                        <includePath>${manifold.root.directory}/src/utilities/include/</includePath>
                        <includePath>${manifold.root.directory}/meshIO/include/</includePath>
                    </includePaths>
                    <preload>libmanifold.so</preload>
                    <copyLibs>false</copyLibs>

                </configuration>
                <executions>
                    <execution>
                        <id>process-classes</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>${manifold.build.directory}/src/manifold/</include>
                            </includes>
                            <compilerProperties>
                                <java.library.path>${manifold.build.directory}/src/manifold/</java.library.path>
                            </compilerProperties>
                            <classOrPackageNames>
                                <classOrPackageName>manifold3d.*</classOrPackageName>
                                <classOrPackageName>manifold3d.manifold.*</classOrPackageName>
                                <classOrPackageName>manifold3d.pub.*</classOrPackageName>
                                <classOrPackageName>manifold3d.glm.*</classOrPackageName>
                            </classOrPackageNames>


                    <compilerProperties>
                        <java.library.path>${manifold.build.directory}/src/manifold/</java.library.path>
                    </compilerProperties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
